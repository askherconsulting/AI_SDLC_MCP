  "description": "Minimal Node + Express web app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "tsx --test --test-concurrency=1 tests/playwright/*.spec.ts tests/vibium/*.spec.ts",
